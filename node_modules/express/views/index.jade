    section.awSlider
      .col-xs-4.col-xs-offset-4
        .carousel.slide(data-ride='carousel')
          // Indicators
          ol.carousel-indicators
            li.active(data-target='.carousel', data-slide-to='0')
            li(data-target='.carousel', data-slide-to='1')
            li(data-target='.carousel', data-slide-to='2')
            li(data-target='.carousel', data-slide-to='3')
          // Wrapper for slides
          .carousel-inner(role='listbox')
            .item.active
              img(src='/hillybilly.jpg')
              .carousel-caption Görsel #1
            .item
              img(src='/teddybear.jpg')
              .carousel-caption Görsel #2
            .item
              img(src='https://www.247famous.com/wp-content/uploads/2015/10/bernie_sanders_pointing-oil-painting-portrait-e1445245259961.jpg')
              .carousel-caption Görsel #3
          // Controls
          a.left.carousel-control(href='.carousel', role='button', data-slide='prev')
            span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
            span.sr-only Geri
          a.right.carousel-control(href='.carousel', role='button', data-slide='next')
            span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
            span.sr-only İleri
