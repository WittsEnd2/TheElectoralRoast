  body
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js', integrity='sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS', crossorigin='anonymous')
    script(src='/slick-init.js')
    nav.navbar.navbar-default.navbar-fixed-top

      .container.navbarBackground
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') The Electoral Roast
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right(style=" right: 0; bottom: 0;")
            li.active.lead
              a(href='/') Home
            li.lead
              a(href='map') Campaign Map
            li.dropdown.lead
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                | Candidate Map
                span.caret
                ul.dropdown-menu
                  li
                    a(href='gop') Republicans
                  li
                    a(href='trump') Donald Trump
                  li
                    a(href='cruz') Ted Cruz
                  li.divider(role='separator')
                  li
                    a(href='democrat') Democrats
                  li
                    a(href='clinton') Hillary Clinton
                  li
                    a(href='sanders') Bernie Sanders
        // /.nav-collapse
    video(id="bgvid" autoplay loop muted)
      source(src="/promovid.mp4" type="video/mp4") 
    .container
      .row(style="margin-top: 5vh;")
        .col-md-12
          .header
            h1.headline.text-center The Electoral Roast
      .row
        .col-md-12
          p.bodyText.text-center Choose a candidate
      br
      br
      //.row
        .col-md-12(style="visibility: hidden;")
          img.center-block(id="hoverspot" src="/hillybilly.jpg")
      .row(style="margin-top: 30vh;  bottom: 0;")
        .col-xs-3.hillary-square
          a(href="/clinton")
            img.img-responsive.center-block(src="/Clinton1.jpeg")
        .col-xs-3.sanders-square
          a(href="/sanders")
            img.img-responsive.center-block(src="/bern1.jpeg")
        .col-xs-3.trump-square
          a(href="/trump")
            img.img-responsive.center-block(src="/Trump1.jpg")
        .col-xs-3.cruz-square
          a(href="/cruz")
            img.img-responsive.center-block(src="/Cruz1.jpeg")

    //
      .row
        .col-xs-4
          a(href='/clinton').pull-left
            img.candidateImage.img-responsive.democratBorder(src='http://www.southdacola.com/blog/wp-content/uploads/2009/08/hillary_clinton.jpg')
        .col-xs-4
          a(href='/cruz').pull-right
            img.candidateImage.img-responsive.republicanBorder(src = 'http://i.imgur.com/IFXxkrr.jpg')

      br
