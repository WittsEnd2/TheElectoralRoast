    nav.navbar.navbar-default.navbar-static-top

      .container.navbarBackground
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-rMap.jadebar
            span.icon-bar
          a.navbar-brand(href='/') The Electoral Roast
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/') Home
            li
              a(href='map') Campaign Map
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                | Candidates
                span.caret
                ul.dropdown-menu
                  li
                    a(href='gop') Republicans
                  li
                    a(href='trump') Donald Trump
                  li
                    a(href='cruz') Ted Cruz
                  li.divider(role='separator')
                  li
                    a(href='democrat') Democrats
                  li
                    a(href='clinton') Hillary Clinton
                  li
                    a(href='sanders') Bernie Sanders
        // /.nav-collapse
    .container
      .row
        .col-md-12
          .header
            h1.headline.text-center Hillary Clinton Campaign Map
      .row
        .col-md-12
          p.bodyText.text-center Twitter posts from potential voters about Hillary Clinton
          ul.bodyText.colorKey
            li.redKey Red = Negative
            li.brownKey Brown = Neutral
            li.greenKey Green = Positive
        br
        br
      .row
        .col-md-12
          ul.nav.nav-tabs
            li.active 
              a(href="#maps" data-toggle="tab") Map
            li
              a(href="#stats" data-toggle="tab") Stats
      div(class="tab-content" style="margin-top: 10px;")
        #maps.tab-pane.fade.in.active  
          .row
            .col-md-12
              #map
        #stats.tab-pane.fade
          .row
            .col-md-4
              canvas#myChart(width='400', height='400')
      //
        #map
        .row
            .col-md-8.col-md-offset-4
                canvas#myChart(width='400', height='400')
